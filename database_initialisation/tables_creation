
CREATE TABLE UTILISATEURS (
	ID INT PRIMARY KEY AUTO_INCREMENT,
	Prenom VARCHAR(220),
	Nom VARCHAR(220),
	Date date,
	Mail VARCHAR(220),
	Pseudo VARCHAR(220),
	Password VARCHAR(220)
);

CREATE TABLE AMIS (
	ID_USER INT,
	ID_AMI INT
);

CREATE TABLE TRANSACTIONS(
	ID_TRANSACTION INT PRIMARY KEY AUTO_INCREMENT,
	etat BOOL,
	date_ouverture date,
	date_fermeture date,
	montant INT,
	id_paye INT,
	id_recoit INT,
	commentaire text,
	fermeture text
);





